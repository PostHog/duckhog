# name: test/sql/roadmap/rm03_delete_remote.test_slow
# description: Roadmap target RM03 - DELETE from remote DuckLake table
# group: [roadmap]

require duckhog

require-env FLIGHT_HOST

require-env FLIGHT_PORT

require-env DUCKHOG_USER

require-env DUCKHOG_PASSWORD

statement ok
ATTACH 'hog:ducklake?user=${DUCKHOG_USER}&password=${DUCKHOG_PASSWORD}&flight_server=grpc+tls://${FLIGHT_HOST}:${FLIGHT_PORT}&tls_skip_verify=true' AS remote_flight;

statement ok
DROP SCHEMA IF EXISTS remote_flight.roadmap_rm03 CASCADE;

statement ok
CREATE SCHEMA remote_flight.roadmap_rm03;

statement ok
CREATE TABLE remote_flight.roadmap_rm03.t(i INT);

statement ok
DELETE FROM remote_flight.roadmap_rm03.t WHERE i = 1;
