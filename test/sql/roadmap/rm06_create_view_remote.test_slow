# name: test/sql/roadmap/rm06_create_view_remote.test_slow
# description: Roadmap target RM06 - CREATE VIEW on remote DuckLake catalog
# group: [roadmap]

require duckhog

require-env FLIGHT_HOST

require-env FLIGHT_PORT

require-env DUCKHOG_USER

require-env DUCKHOG_PASSWORD

statement ok
ATTACH 'hog:ducklake?user=${DUCKHOG_USER}&password=${DUCKHOG_PASSWORD}&flight_server=grpc+tls://${FLIGHT_HOST}:${FLIGHT_PORT}&tls_skip_verify=true' AS remote_flight;

statement ok
DROP SCHEMA IF EXISTS remote_flight.roadmap_rm06 CASCADE;

statement ok
CREATE SCHEMA remote_flight.roadmap_rm06;

statement ok
CREATE TABLE remote_flight.roadmap_rm06.t(i INT);

statement ok
CREATE VIEW remote_flight.roadmap_rm06.v AS SELECT i FROM remote_flight.roadmap_rm06.t;
