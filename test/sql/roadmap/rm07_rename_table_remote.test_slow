# name: test/sql/roadmap/rm07_rename_table_remote.test_slow
# description: Roadmap target RM07 - ALTER TABLE RENAME TO on remote table
# group: [roadmap]

require duckhog

require-env FLIGHT_HOST

require-env FLIGHT_PORT

require-env DUCKHOG_USER

require-env DUCKHOG_PASSWORD

statement ok
ATTACH 'hog:ducklake?user=${DUCKHOG_USER}&password=${DUCKHOG_PASSWORD}&flight_server=grpc+tls://${FLIGHT_HOST}:${FLIGHT_PORT}&tls_skip_verify=true' AS remote_flight;

statement ok
DROP SCHEMA IF EXISTS remote_flight.roadmap_rm07 CASCADE;

statement ok
CREATE SCHEMA remote_flight.roadmap_rm07;

statement ok
CREATE TABLE remote_flight.roadmap_rm07.t_old(i INT);

statement ok
ALTER TABLE remote_flight.roadmap_rm07.t_old RENAME TO t_new;
