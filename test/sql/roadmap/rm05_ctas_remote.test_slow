# name: test/sql/roadmap/rm05_ctas_remote.test_slow
# description: Roadmap target RM05 - CREATE TABLE AS on remote DuckLake table
# group: [roadmap]

require duckhog

require-env FLIGHT_HOST

require-env FLIGHT_PORT

require-env DUCKHOG_USER

require-env DUCKHOG_PASSWORD

statement ok
ATTACH 'hog:ducklake?user=${DUCKHOG_USER}&password=${DUCKHOG_PASSWORD}&flight_server=grpc+tls://${FLIGHT_HOST}:${FLIGHT_PORT}&tls_skip_verify=true' AS remote_flight;

statement ok
DROP SCHEMA IF EXISTS remote_flight.roadmap_rm05 CASCADE;

statement ok
CREATE SCHEMA remote_flight.roadmap_rm05;

statement ok
CREATE TABLE remote_flight.roadmap_rm05.t_ctas AS SELECT 42 AS id, 'x' AS name;
