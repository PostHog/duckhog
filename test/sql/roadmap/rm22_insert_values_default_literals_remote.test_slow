statement ok
CREATE SCHEMA remote_flight.roadmap_rm22_defaults;

statement ok
CREATE TABLE remote_flight.roadmap_rm22_defaults.t(i INT DEFAULT 42, j INT DEFAULT 7);

statement ok
INSERT INTO remote_flight.roadmap_rm22_defaults.t(i, j) VALUES (DEFAULT, DEFAULT);

